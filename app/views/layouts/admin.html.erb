<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Ecom Admin Panel" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

    <!-- Alpine.js for toggle -->
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
  </head>

  <body class="bg-gray-100 font-sans" x-data="{ sidebarOpen: false }">
    <div class="flex min-h-screen">

      <!-- Sidebar -->
      <aside
        class="fixed inset-y-0 left-0 z-30 w-64 bg-gray-900 text-white flex flex-col transform transition-transform duration-200 ease-in-out md:relative md:translate-x-0"
        :class="{ '-translate-x-full': !sidebarOpen, 'translate-x-0': sidebarOpen }"
      >
        <!-- Sidebar Header -->
        <div class="p-4 text-2xl font-bold border-b border-gray-700 flex items-center justify-between">
          <span><i class="fa-solid fa-store mr-2"></i>Ecom Admin</span>
          <button @click="sidebarOpen = false" class="md:hidden">
            <i class="fa-solid fa-xmark text-xl"></i>
          </button>
        </div>

        <!-- Sidebar Nav -->
        <nav class="flex-1 p-4 space-y-2">
          <%= link_to admin_root_path,
                      class: "flex items-center p-2 rounded hover:bg-gray-800 #{current_page?(admin_root_path) ? 'bg-gray-800' : ''}" do %>
            <i class="fa-solid fa-gauge mr-2"></i> Dashboard
          <% end %>

          <%= button_to destroy_admin_session_path, method: :delete,
                        class: "flex items-center p-2 rounded hover:bg-gray-800 text-red-400 w-full text-left" do %>
            <i class="fa-solid fa-right-from-bracket mr-2"></i>
            <span>Logout</span>
          <% end %>
        </nav>
      </aside>

      <!-- Overlay (visible on mobile when sidebar open) -->
      <div
        class="fixed inset-0 bg-black opacity-50 z-20 md:hidden"
        x-show="sidebarOpen"
        @click="sidebarOpen = false"
      ></div>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col transition-all duration-200">
        <!-- Header -->
        <header class="bg-white shadow p-4 flex justify-between items-center sticky top-0 z-10">
          <div class="flex items-center space-x-3">
            <!-- Hamburger -->
            <button @click="sidebarOpen = !sidebarOpen" class="md:hidden focus:outline-none">
              <i class="fa-solid fa-bars text-2xl text-gray-700"></i>
            </button>
            <h1 class="text-xl font-semibold">
              <%= content_for?(:title) ? yield(:title) : "Dashboard" %>
            </h1>
          </div>

          <% if admin_signed_in? %>
            <div class="flex items-center space-x-4">
              <span class="text-gray-700 hidden sm:inline">
                <i class="fa-solid fa-user-shield mr-2"></i><%= current_admin.email %>
              </span>
              <%= button_to "Logout",
                            destroy_admin_session_path,
                            method: :delete,
                            class: "bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm" %>
            </div>
          <% end %>
        </header>

        <!-- Flash Messages -->
        <div class="px-6 mt-4">
          <% if notice %>
            <div class="mb-4 p-4 rounded bg-green-100 text-green-800">
              <%= notice %>
            </div>
          <% end %>
          <% if alert %>
            <div class="mb-4 p-4 rounded bg-red-100 text-red-800">
              <%= alert %>
            </div>
          <% end %>
        </div>

        <!-- Page Content -->
        <main class="flex-1 p-6 overflow-y-auto">
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
